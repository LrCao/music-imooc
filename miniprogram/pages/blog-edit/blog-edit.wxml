<view class="container">
  <textarea 
    class="content" 
    placeholder="分享新鲜事..."
    bindinput="onInput"
    maxlength="140"
   auto-focus
   bindfocus="onFocus"
   bindblur="onBlur"
  >
  
  </textarea>

  <view class="image-list">
    <!-- 显示图片 -->
    <block wx:for="{{images}}" wx:key="this">
      <view class="image-wrap">
        <image class="image" src="{{item}}" mode="aspectFill"
        bind:tap="onPreviewImage"
        data-imgscr="{{item}}"></image>
        <i class="iconfont icon-shanchu" bind:tap="onDelIamge" data-index="{{index}}"/>
      </view>
    </block>

    <!-- 选择图片 -->
    <view class="image-wrap selectphoto" bind:tap="onChooseImage" hidden="{{images.length===9}}">
      <i class="iconfont icon-jiahao"/>
    </view>
  </view>
</view>

<view class="footer" style="bottom:{{footerBottom}}px">
  <text class="words-num">{{wordsNum}}</text>
  <button class="send-btn" size="mini" bind:tap="send">发布</button>
</view>
